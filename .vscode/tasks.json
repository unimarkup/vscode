{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Extension",
			"type": "npm",
			"script": "compile",
			"path": "vscode",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/"
			},
			"problemMatcher": {
				"base": "$tsc",
				"fileLocation": [
					"relative",
					"${workspaceFolder}"
				]
			}
		},
		{
			"label": "Build Extension in Background",
			"type": "npm",
			"script": "watch",
			"isBackground": true,
			"path": "vscode",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}/"
			},
			"problemMatcher": {
				"base": "$tsc-watch",
				"fileLocation": [
					"relative",
					"${workspaceFolder}"
				]
			}
		},
		{
			"label": "Build Server",
			"group": "build",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/../unimarkup-lsp/"
			},
			"command": "cargo build --package unimarkup_lsp; cp target/debug/unimarkup_ls* ../vscode/server_bin",
			"problemMatcher": "$rustc"
		},
		{
			"label": "Build release Server",
			"group": "build",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/../unimarkup-lsp/"
			},
			"command": "cargo build --release --package unimarkup_lsp; cp target/release/unimarkup_ls* ../vscode/server_bin",
			"problemMatcher": "$rustc"
		},
		{
			"label": "Build Server for Linux",
			"group": "build",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/../unimarkup-lsp/"
			},
			"command": "cargo build --target x86_64-unknown-linux-gnu --release --package unimarkup_lsp; cp target/release/unimarkup_ls* ../vscode/server_bin",
			"problemMatcher": "$rustc"
		}
	]
}