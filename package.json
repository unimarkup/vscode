{
  "name": "unimarkup",
  "displayName": "unimarkup",
  "description": "Extension for Unimarkup providing live preview and integration of the language server protocol.",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onWebviewPanel:unimarkup.preview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configurationDefaults": {
      "editor.quickSuggestions": {
        "other": false,
        "comments": false,
        "strings": false
      },
      "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        "rules": {
          "*.declaration": {
            "bold": true
          },
          "*.definition": {
            "italic": true
          },
          "*.readonly": "#ff0000"
        }
      }
    },
    "languages": [
      {
        "id": "unimarkup",
        "aliases": [
          "Unimarkup",
          "um"
        ],
        "extensions": [
          ".um"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "unimarkup",
        "scopeName": "source.unimarkup",
        "path": "./syntaxes/um.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Language Server Settings",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "commands": [
      {
        "command": "um.preview",
        "title": "Create new preview",
        "category": "Unimarkup",
        "icon": "$(open-preview)"
      },
      {
        "command": "onLanguage:unimarkup",
        "title": "Show preview",
        "category": "Unimarkup",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "um.preview",
          "when": "editorLangId == unimarkup",
          "group": "navigation@1"
        }
      ]
    },
    "keybindings": [
      {
        "command": "um.preview",
        "key": "ctrl+q s",
        "mac": "cmd+q s",
        "when": "editorTextFocus && editorLangId == unimarkup"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.65.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vscode/test-electron": "^2.1.2",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "typescript": "^4.5.5"
  }
}
